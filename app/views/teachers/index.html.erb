<h1>Listing teachers</h1>

<table>
  <thead>
    <tr>
      <th>Id no</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Sch name</th>
      <th>Sch code</th>
      <th>County</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Academic</th>
      <th>Employed on</th>
      <th>Department</th>
      <th>Employer</th>
      <th>Employee num</th>
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.id_no %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.dob %></td>
        <td><%= teacher.gender %></td>
        <td><%= teacher.sch_name %></td>
        <td><%= teacher.sch_code %></td>
        <td><%= teacher.county %></td>
        <td><%= teacher.phone %></td>
        <td><%= teacher.address %></td>
        <td><%= teacher.academic %></td>
        <td><%= teacher.employed_on %></td>
        <td><%= teacher.department %></td>
        <td><%= teacher.employer %></td>
        <td><%= teacher.employee_num %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.bio %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

