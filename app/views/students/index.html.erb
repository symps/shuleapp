<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Adm</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Sch name</th>
      <th>Sch code</th>
      <th>County</th>
      <th>Form</th>
      <th>Stream</th>
      <th>Dorm</th>
      <th>Admitted on</th>
      <th>Previous sch</th>
      <th>Kcpe</th>
      <th>Email</th>
      <th>Parent</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.adm %></td>
        <td><%= student.name %></td>
        <td><%= student.dob %></td>
        <td><%= student.gender %></td>
        <td><%= student.sch_name %></td>
        <td><%= student.sch_code %></td>
        <td><%= student.county %></td>
        <td><%= student.form %></td>
        <td><%= student.stream %></td>
        <td><%= student.dorm %></td>
        <td><%= student.admitted_on %></td>
        <td><%= student.previous_sch %></td>
        <td><%= student.kcpe %></td>
        <td><%= student.email %></td>
        <td><%= student.parent %></td>
        <td><%= student.bio %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

