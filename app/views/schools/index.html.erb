<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Motto</th>
      <th>Logo</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Type</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.code %></td>
        <td><%= school.name %></td>
        <td><%= school.motto %></td>
        <td><%= school.logo %></td>
        <td><%= school.location %></td>
        <td><%= school.phone %></td>
        <td><%= school.address %></td>
        <td><%= school.stype %></td>
        <td><%= school.bio %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

