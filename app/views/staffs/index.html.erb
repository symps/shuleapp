<h1>Listing staffs</h1>

<table>
  <thead>
    <tr>
      <th>Id num</th>
      <th>Name</th>
      <th>Sch name</th>
      <th>Sch code</th>
      <th>Photo</th>
      <th>County</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Job</th>
      <th>Staff</th>
      <th>Academic</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.id_num %></td>
        <td><%= staff.name %></td>
        <td><%= staff.sch_name %></td>
        <td><%= staff.sch_code %></td>
        <td><%= staff.photo %></td>
        <td><%= staff.county %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.address %></td>
        <td><%= staff.gender %></td>
        <td><%= staff.job %></td>
        <td><%= staff.staff_id %></td>
        <td><%= staff.academic %></td>
        <td><%= staff.bio %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

